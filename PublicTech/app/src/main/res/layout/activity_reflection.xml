<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/id_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Test"/>

    <Button
        android:id="@+id/id_benchmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Benchmarks"/>

    <Button
        android:id="@+id/id_toast_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast Show"/>

    <Button
        android:id="@+id/id_toast_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast Hide"/>

    <com.github.pedrovgs.lynx.LynxView
        android:id="@+id/id_console"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:filter="test"
        app:text_size="12sp"/>
</LinearLayout>